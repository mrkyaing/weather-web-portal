@model IEnumerable<SatelliteRadarImageViewModel>

@{
    ViewData["Title"] = "Satellite Radar Image List";
}

<h2>Satellite Radar Image List</h2>

<a asp-action="Entry" class="btn btn-success mb-3">Add New</a>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">@TempData["success"]</div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        No satellite radar images found. <a asp-action="Entry">Add new image</a>
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark text-white">
            <tr>
                <th>Image</th>
                <th>Type</th>
                <th>Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" width="100" height="80" style="object-fit: cover;" alt="@item.ImageType" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>@item.ImageType</td>
                    <td>@item.WhenReadAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            @item.Description
                        }
                        else
                        {
                            <span class="text-muted">No description</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this image?')">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}