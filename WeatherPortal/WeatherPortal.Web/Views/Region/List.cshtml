@model IEnumerable<RegionViewModel>

<div class="col-md-8">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="m-0">Region List</h1>
        <a href="/region/entry" class="btn btn-success">Entry</a>
    </div>
    <div class="card p-3">
        <table class="table table-bordered">
            <thead class="table-dark text-white">
                <tr>
                    <th>No</th>
                    <th>English Name</th>
                    <th>Myanmar Name</th>
                    <th>Code</th>
                    <th>Type</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="text-white">
                @{
                    int i = 1;
                }

                @foreach (var region in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@region.RegionNameInEnglish</td>
                        <td>@region.RegionNameInMyanmar</td>
                        <td>@region.OrderCode</td>
                        <td>@region.RegionType</td>
                        <td>
                            <a href="/region/edit/@region.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/region/delete/@region.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>