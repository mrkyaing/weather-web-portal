<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Weather Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/weather-portal.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-navbar shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="me-2" aria-hidden="true">
                        <path d="M6 14a6 6 0 1 1 12 0H6z" fill="currentColor"/>
                    </svg>
                    <span class="fw-bold">Weather Portal</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="weatherDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Weather</a>
                            <ul class="dropdown-menu" aria-labelledby="weatherDropdown">
                                <li><a class="dropdown-item" href="/Weather/Daily">Daily</a></li>
                                <li><a class="dropdown-item" href="/Weather/Weekly">Weekly</a></li>
                                <li><a class="dropdown-item" href="/Weather/SeaForecast">Sea Forecast</a></li>
                                <li><a class="dropdown-item" href="/Weather/Map">Maps</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Privacy">Privacy</a>
                        </li>
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="weatherDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Weather Station</a>
                            <ul class="dropdown-menu" aria-labelledby="weatherDropdown">
                                <li><a class="dropdown-item" href="/WeatherStation/Entry">Add Station</a></li>
                                <li><a class="dropdown-item" href="/WeatherStation/List">Station list</a></li>
                               
                            </ul>
                        </li>
                        
                    </ul>
                    <form class="d-flex" role="search" id="nav-search-form" onsubmit="return false;">
                        <input class="form-control me-2" type="search" placeholder="Search city or zip" aria-label="Search" id="nav-search-input">
                        <button class="btn btn-outline-primary" type="button" id="nav-search-button">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="site-root d-flex flex-column min-vh-100">
        <div class="container site-content flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - Weather Portal- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
