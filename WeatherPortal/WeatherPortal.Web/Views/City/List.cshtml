@model IEnumerable<CityViewModel>

<div class="col-md-8">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="m-0">City List</h1>
        <a href="/city/entry" class="btn btn-success">Entry</a>
    </div>
    <div class="card p-3">
        <table class="table table-bordered">
            <thead class="table-dark text-white">
                <tr>
                    <th>No</th>
                    <th>English Name</th>
                    <th>Myanmar Name</th>
                    <th>Region (English)</th>
                    <th>Region (မြန်မာ)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="text-dark">
                @{
                    int i = 1;
                }

                @foreach (var city in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@city.CityNameInEnglish</td>
                        <td>@city.CityNameInMyanmar</td>
                        <td>@city.RegionNameInEnglish.</td>
                        <td>@city.RegionNameInMyanmar</td>
                        <td>
                            <a href="/city/edit/@city.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/city/delete/@city.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>