@model CityViewModel

@{
    ViewData["Title"] = "City";
}
@{
    var info = ViewData["Info"];

}
@if (info != null)
{
    if (Convert.ToBoolean(ViewData["Status"]))
    {
        <div class="alert alert-success" role="alert">
            @info
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            @info
        </div>
    }
}

<div class="row">
    <div class="col-md-6">
        <form action="/city/entry" method="post">
            <div class="card p-3">
                <h1>City Entry</h1>
                <div class="mb-3">
                    <label class="form-label"> City Name In English </label>
                    <input type="text" class="form-control" name="CityNameInEnglish" placeholder="Enter City Name in English" />
                </div>

                <div class="mb-3">
                    <label class="form-label">City Name Myanmar  </label>
                    <input type="text" class="form-control" name="CityNameInMyanmar" placeholder="Enter City Name in Myanmar" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Region (English)</label>
                    <select class="form-select" id="RegionSelect" name="RegionId">
                        <option value="">[ Select One ]</option>
                        @foreach (var region in ViewBag.Region)
                        {
                            <option value="@region.Id" data-myanmar="@region.RegionNameInMyanmar">@region.RegionNameInEnglish</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Region (Myanmar)</label>
                    <input type="text" class="form-control" id="RegionMyanmar" name="RegionNameInMyanmar" readonly />
                </div>
                <button class="btn btn-success mb-3" type="submit"> Save </button>
                <a href="/city/list" class="btn btn-success"> City Information List </a>
            </div>
        </form>
    </div>
    @section Scripts {
        <script>
            document.getElementById("RegionSelect").addEventListener("change", function () {
                var selectedOption = this.options[this.selectedIndex];
                var myanmarName = selectedOption.getAttribute("data-myanmar");
                document.getElementById("RegionMyanmar").value = myanmarName || "";
    });
        </script>
    }
